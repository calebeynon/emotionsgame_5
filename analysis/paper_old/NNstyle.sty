% ------------------ environments ------------------

\newenvironment{centr}{%
	\setlength\topsep{0pt}
	\setlength\parskip{0pt}
	\begin{center}
	}{%
	\end{center}
}

\newenvironment{kcom}{%
	\begin{adjustwidth}{4mm}{4mm}
		\begin{oldText}
			\vspace{-1mm}
			%		{\scriptsize \hspace{-4mm} \textbf{General note}}\\[3mm]
			\vspace{5mm}
			\footnotesize
			\setlength{\parindent}{0pt}
			\setlength\topsep{0pt}
			\setlength\parskip{0pt}
		}{%
			\vspace{-1mm}
		\end{oldText}
		\vspace{2mm}
	\end{adjustwidth}
}

\newenvironment{kcom2}{%
	\begin{adjustwidth}{4mm}{4mm}
		\begin{myframe}
			\vspace{-1mm}
			%		{\scriptsize \hspace{-4mm} \textbf{General note}}\\[3mm]
			\vspace{5mm}
			\footnotesize
			\setlength{\parindent}{0pt}
			\setlength\topsep{0pt}
			\setlength\parskip{0pt}
		}{%
			\vspace{-1mm}
		\end{myframe}
		\vspace{2mm}
	\end{adjustwidth}
}

\newenvironment{prewrite}{%
	\begin{adjustwidth}{4mm}{4mm}
		\begin{prenote}
			\vspace{-1mm}
			%		{\scriptsize \hspace{-4mm} \textbf{General note}}\\[3mm]
			\vspace{5mm}
			\footnotesize
			\setlength{\parindent}{0pt}
			\setlength\topsep{0pt}
			\setlength\parskip{0pt}
		}{%
			\vspace{-1mm}
		\end{prenote}
		\vspace{2mm}
	\end{adjustwidth}
}

